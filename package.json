{
  "name": "demi-element",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "exports": {
    ".": {
      "require": "./dist/index.cjs.js",
      "import": "./dist/index.es.js"
    },
    "./dist/style.css": {
      "require": "./dist/style.css",
      "import": "./dist/style.css"
    }
  },
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "types": "./types/index.d.ts",
  "style": "dist/style.css",
  "files": [
    "scripts",
    "dist",
    "types"
  ],
  "scripts": {
    "start": "npm run dev:3",
    "dev:2": "vue-demi-switch 2 vue2 && pnpm --filter vue2-ui dev",
    "dev:3": "vue-demi-switch 3 vue3 && pnpm --filter vue3-ui dev",
    "build": "npm run clean && run-s build:*",
    "build:2": "vue-demi-switch 2 vue2 && pnpm --filter vue2-ui build",
    "build:3": "vue-demi-switch 3 vue3 && pnpm --filter vue3-ui build",
    "clean": "rimraf ./dist",
    "postinstall": "node scripts/postinstall.js"
  },
  "peerDependencies": {
    "@vue/composition-api": "^1.4.9",
    "vue": "^2.0.0 || >=3.0.0"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  },
  "dependencies": {
    "path": "^0.12.7",
    "vue-demi": "^0.14.7",
    "vue2": "npm:vue@2",
    "vue3": "npm:vue@3"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@vitejs/plugin-vue": "^5.0.4",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vue-tsc": "^2.0.6"
  },
  "pnpm": {
    "packageExtensions": {
      "vue-template-compiler": {
        "peerDependencies": {
          "vue": "~2.6.14"
        }
      }
    }
  }
}
